<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // CLOCK
    setInterval(() => {
        document.getElementById("liveClock").innerText =
            new Date().toLocaleString("vi-VN", { hour12: false });
    }, 1000);

    // SHOW EVENT
    function showEvent(videoUrl, photoUrl) {
        const v = `/static/${videoUrl}`;
        const p = `/static/${photoUrl}`;

        document.getElementById("videoContainer").innerHTML = `
            <video controls autoplay>
                <source src="${v}" type="video/webm">
            </video>`;

        document.getElementById("photoContainer").innerHTML =
            `<img src="${p}" class="full-img">`;
    }

    // LOAD LOGS
    function loadLogs() {
        fetch("/get_logs")
        .then(r => r.json())
        .then(data => {
            if (!data.length) {
                document.getElementById("events").innerHTML = "Ch∆∞a c√≥ d·ªØ li·ªáu";
                return;
            }

            let html = "";
            data.slice().reverse().forEach(e => {
                html += `
                <div class="card-event"
                     onclick="showEvent('${e.video_clip}','${e.thumbnail}')">
                    <img src="/static/${e.thumbnail}">
                    <div>
                        <div>${e.timestamp}</div>
                        <div style="color:#fbbf24;">${e.object}</div>
                    </div>
                </div>`;
            });

            document.getElementById("events").innerHTML = html;
        });
    }

    loadLogs();
    setInterval(loadLogs, 2000);
</script>

